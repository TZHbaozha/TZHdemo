page{
    background-color: #FBFBFB;
}

.order_prompt{
    width:100%;
    height:150rpx;
    text-align: center;
    line-height: 150rpx;
    font-size: 33rpx;
    background-color: #FBFBFB;
}

.order_container{
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}
.order_left{
    width:5%;
    height:330rpx;
    background-color: #fff;
}

.order_list{
    flex: 1;
    height:330rpx;
    background: #fff;
}

.order_list .order_num{
    display: flex;
    position: relative;
    width:100%;
    height:70rpx;
    align-items: center;
    color:#ABABAB;
    font-size: 25rpx;
    border-bottom: 1rpx solid #F0F0F0;
}
.order_list .order_num text:nth-of-type(2){
    margin-left: 10rpx;
}

.order_list .order_num text:nth-of-type(3){
    position: absolute;
    right:14rpx;
}
.order_list .location{
    position: relative;
    width:100%;
    height:90rpx;
}
.order_list .location text:nth-of-type(1){
    font-size: 28rpx;
    font-weight: bold;
    line-height: 90rpx;
}
.order_list .location text:nth-of-type(2){
    position: absolute;
    right:20rpx;
    font-size: 20rpx;
    font-weight: lighter;
    line-height: 60rpx;
    color: #AEAEAE;
}
.order_list .goods_total{
    width:100%;
    height:70rpx;
    font-size: 26rpx;
}
.total_price{
    width:100%;
    height:80rpx;
    font-size: 30rpx;
}